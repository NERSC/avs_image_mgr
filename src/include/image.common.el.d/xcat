_create_addon_xcat_2_7_7_201212210343 () {
    _addon_xcat 2.7.7 201212210343 "$@"
}


_addon_xcat () {
    _XCAT_VERSION=$1
    shift
    _XCAT_DEP_SNAP_VERSION=$1
    shift

    m4 -DXCAT_VERSION="${_XCAT_VERSION}" -DsnapXCAT_DEP_SNAP_VERSION="snap${_XCAT_DEP_SNAP_VERSION}" $IMAGEFILES/image_mgr.xcat.repo.m4 > $ADDONROOT/etc/yum.repos.d/image_mgr.xcat.repo

    # Install xCAT and dependencies
    # perl-DBD-Pg is required to talk to an xCAT postgres database
    # perl-Sys-Virt is required for xCAT to control libvirt-based VM hosts
    $YUM install xCAT perl-DBD-Pg perl-Sys-Virt

}



